{
    "name": "@alien/adonis-controller-validator",
    "version": "0.1.3",
    "description": "Static analysis tool for AdonisJS controller pattern validation",
    "type": "module",
    "main": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "bin": {
        "adonis-validator": "./dist/src/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "biome check .",
        "lint:fix": "biome check . --write",
        "prepublishOnly": "npm run build",
        "postversion": "npm run lint:fix && git add package.json && git commit --amend --no-edit"
    },
    "keywords": ["adonisjs", "validator", "static-analysis", "typescript", "ast", "linting"],
    "author": "Alien Intelligence",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "ts-morph": "^24.0.0"
    },
    "devDependencies": {
        "@adonisjs/core": "^6.19.3",
        "@biomejs/biome": "^1.9.0",
        "@types/node": "^22.0.0",
        "typescript": "^5.6.0",
        "vitest": "^2.1.0"
    },
    "peerDependencies": {
        "@adonisjs/core": "^6.0.0"
    },
    "peerDependenciesMeta": {
        "@adonisjs/core": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "files": ["dist", "README.md", "stubs"],
    "exports": {
        ".": "./dist/src/index.js",
        "./commands": "./dist/src/commands/index.js",
        "./types": "./dist/src/types.js"
    },
    "adonisjs": {
        "types": "@alien/adonis-controller-validator",
        "commands": ["@alien/adonis-controller-validator/commands"]
    }
}
